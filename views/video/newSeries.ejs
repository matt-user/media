<% include ../partials/header %>

<div class="container">
	<div class="row">
		<h1 style="text-align: center;">Make a New Series</h1>
		<div style="width: 30%; margin: 25px auto;">
			<form action="/videos" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="title" placeholder="title">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="thumbnail" placeholder="thumbnail url">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="numSeasons" placeholder="Number of Seasons">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary">Submit</button>
				</div>
			</form>
			<a href="/">Go Back</a>
		</div>
	</div>
</div>

<% include ../partials/footer %>